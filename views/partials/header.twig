<header class="site-header" data-sticky>
	<div class="container header-inner">
		<a class="brand" href="{{ site.url }}">
			{% if acf.logo %}
				<img src="{{ acf.logo.url }}" alt="{{ acf.logo.alt|default(site.name) }}">
			{% else %}
				{{ site.name }}
			{% endif %}
		</a>

		<button class="hamburger" aria-label="Menu" data-toggle="menu">
			<span></span>
			<span></span>
			<span></span>
		</button>

		<nav class="primary-nav" data-menu>
			{% if function('has_nav_menu', 'main-menu') %}
				{{ function('wp_nav_menu', {
      'theme_location'  : 'main-menu',
      'container'       : false,
      'menu_class'      : 'menu-list',
      'fallback_cb'     : false,
      'echo'            : false,
      'depth'           : 2
    })|raw }}
			{% endif %}
		</nav>
		<div class="mini-cart" id="mini-cart">
			<button class="mini-cart__toggle" id="mini-cart-toggle" aria-label="Koszyk">
				ðŸ›’
				<span id="mini-cart-count">0</span>
			</button>

			<div class="mini-cart__sidebar" id="mini-cart-sidebar">
				<div class="mini-cart__header">
					<h3>Koszyk</h3>
					<button class="mini-cart__close" id="mini-cart-close">&times;</button>
				</div>
				<div class="mini-cart__content" id="mini-cart-content">
					<p class="mini-cart__empty">Koszyk jest pusty.</p>
				</div>
				<div class="mini-cart__footer">
					<a href="{{ fn('wc_get_cart_url') }}" class="btn btn--primary">PrzejdÅº do koszyka</a>
				</div>
			</div>
			<div class="mini-cart__overlay" id="mini-cart-overlay"></div>
		</div>

	</div>
</header>

